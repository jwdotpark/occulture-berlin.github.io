{% assign eventQuery = site.data.events-2019 | where: 'searchString', page.searchString %}
{% assign event = eventQuery.first %}

%section#event.inner.center
  .title
    {{event.title}}
  .avatar
    %img{src:'{{event.avatarPath}}', alt:'{{event.name}}', onError:'loadDefaultAvatar(this)'}
    .name
      {{event.name}}
  .main-info-wrap
    .abstract.justified
      {{event.description}}
    .bio.justified
      {{event.bio}}

  / .button.ga-track{data:{tracker:'get-tickets-speaker-page-{{event.searchString}}'}}
  /   {% haml get_tickets.haml %}
